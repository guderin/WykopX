        --explosionTiming: linear;
    }
    
    section.rating-box > div.buttons > button.minus
    {
        margin-left: 14px;
    }
    
    .wykopxs_vote_animation
    {
        opacity: 0;
        cursor: crosshair;
        font-size: 12rem;
        font-weight: bolder;
        position: absolute;
        top: -10px;
        animation-name: explodePluses;
        animation-delay: var(--explosionDelay);
        animation-duration: var(--explosionDuration);
        animation-timing-function: var(--explosionTiming);
    } 
    
    if(votingExplosionAnimation == "animacja2")
    {
        .wykopxs_vote_animation 
        {
            animation-name: explodePluses, explodePlusesAnimacja2;
        } 
    } 
    else if(votingExplosionAnimation == "animacja3")
    {
        .wykopxs_vote_animation 
        {
            animation-name: explodePluses, explodePlusesAnimacja3;
        } 
    } 
    
    /* plusy */
    .wykopxs_vote_animation.wykopxs_green
    {
        color: var(--green)!important;
    /*  text-shadow: 0px 0px 2px var(--green); */
    } 
  
