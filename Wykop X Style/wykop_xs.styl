    {
        font-size: 35rem;
        color: var(--golden)!important;
        text-shadow: 0px 0px 5px var(--golden);
    } 

    /* minusy */
    .wykopxs_vote_animation.wykopxs_red
    {
        color: var(--red)!important;
    } 
    
    
    @keyframes explodePluses
    {
        0%      { transform: translate3d(0, 0, 0); opacity: 0; } 
        12%     { opacity: 0.2; } 
        13%     { opacity: 1; } 
        70%     { opacity: 1; } 
        90%     { opacity: 0.4; } 
        100%    { transform: translate3d(var(--position_x), var(--position_y), var(--position_z)); opacity: 0; } 
    } 
    @eyframes explodePlusesAnimacja2
    {
        0%      { scale: 60%;   } 
        12%     { scale: 60%;   } 
        13%     { scale: 60%;   } 
        70%     { scale: 60%;   } 
        90%     { scale: 120%;  } 
        100%    { scale: 400%;  } 
    } 
    
    @keyframes explodePlusesAnimacja3
    {
        0%      { scale: 60%;   } 
        12%     { scale: 60%;   } 
        13%     { scale: 60%;   } 
        70%     { scale: 60%;   } 
        90%     { scale: 120%;  } 
        100%    { scale: 400%;  } 
    } 
    

        
    
    
