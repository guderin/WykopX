        content: var(--removedPluses);
    }
    .addedMinuses > article > header > div.right > div > section.rating-box:after
    {
        color: #a10707;
        content: var(--addedMinuses);
    }
    .removedMinuses > article > header > div.right > div > section.rating-box:after
    {
        color: #fff;
        content: var(--removedMinuses);
    }
    
    @keyframes isIntersectingAnimation
    {
        0%      { border-left-color: transparent; }
        70%     { border-left-color: green; }
        100%    { border-left-color: transparent; }
    }
    @keyframes fadeOutAnimation
    {
        0%      { scale: 1.0; opacity: 0.8; }
        10%     { scale: 1.3; opacity: 1;   }
        70%     { scale: 1;   opacity: 1;   }
        90%     { scale: 0.8; opacity: 0.6; }
        100%    { scale: 0.8; opacity: 0;   }
    } 
    @keyframes slideUpAnimation
    {
        0%      { translate: 0px 10px; }
        20%     { translate: 0px 0px; }
        70%     { translate: 0px 0px; }
        100%    { translate: 0px -10px; }
    } 
    @keyframes slideDownAnimation
    {
        0%      { translate: 0px -10px; }
        20%     { translate: 0px 0px; }
        70%     { translate: 0px 0px; }
        100%    { translate: 0px 10px; }
    } 
        
        
        
    // VOTINGEXPLOSION : animacja plusowania Wykop XS
    section.rating-box
    {
        position: relative;
        --explosionDelay: 0s;
