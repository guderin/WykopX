    #message-box > div
    {
        max-width: 100%!important;
        max-height: 100%!important;
        top: 0px!important;
    } 

    #message-box > div > #message-box-close-icon
    {
        position: absolute;
        right: 11px;
        top: 10px;
        transition: all 0.1s ease-in-out; 

    } 
    #message-box > div > #message-box-close-icon i
    {
        display: none;
    } 
    #message-box > div > #message-box-close-icon:before
    {
        width: 20px; height: 20px;
        content: "❌";
        font-size: 16px;
    } 
    #message-box > div > #message-box-close-icon:hover
    {
        scale: 1.4;
    } 
    .config-body .select-wrapper
    {
        max-width: 100%;
    }
    
    #message-box.config-dialog .config-body input[type="text"], 
    #message-box.config-dialog .config-body .select-resizer, 
    #message-box.config-dialog .config-body select,
    #message-box.config-dialog .config-body input[type="range"]
    {
        min-width: 210px;
    } 

    #message-box-contents div.config-heading a[href$="wykopx.pl"]
    {
        font-size: 0;
        text-decoration: none;
    } 
    #message-box-contents div.config-heading a[href$="wykopx.pl"]:before
    #message-box-contents div.config-heading a[href$="wykopx.pl"]:after
    {
        font-size: 13px;
    } 


    #message-box-contents div.config-heading a[href$="wykopx.pl"]:hover:after
    {
        text-decoration: underline;
    } 


    #message-box-contents div.config-heading 
    {
        text-align: center;

        a[href$="wykopx.pl"]
        {
        } 
        a[href$="wykopx.pl"]:before,
        a[href$="wykopx.pl"]:after
        {
                font-size: 16px
                display: block;
                cursor: default
                color: rgba(255, 255, 255, 0.6);
        } 
        a[href$="wykopx.pl"]:before,
        {
            margin-top: 30px!important
        } 
        a[href$="wykopx.pl"]:hover
        {
        } 
    } 

    [data-ui-theme="light"] #message-box-contents div.config-heading  a[href$="wykopx.pl"]:after,
    [data-ui-theme="light"] #message-box-contents div.config-heading  a[href$="wykopx.pl"]:before
    {
        color: rgba(0, 0, 0, 0.6);
    } 

